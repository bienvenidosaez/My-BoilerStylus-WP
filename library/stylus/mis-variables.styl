//Colores del tema
$ColorBase 	  = #262626
$ColorTitulos = #262626
$ColorEnlaces = #262626
$ColorFondo   = white

//Color para la selección
::-moz-selection
  background #97b5d9
  text-shadow none

::selection
  background #97b5d9
  text-shadow none

//Tamaño del texto del tema en cuestión
$TextoBase 			= 16px
$TextoGrande		= $TextoBase * 1.35
$TextoPequeno 		= $TextoBase * 0.85
$TextoMini 			= $TextoBase * 0.75

//Fuente del texto base
@import "fonts"
$FuenteTitulos = 'Open Sans'
$FuenteBase    = 'Open Sans'
*
	font-family $FuenteBase