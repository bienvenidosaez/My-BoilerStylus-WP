@import "normalize.styl"
@import "bootstrap/bootstrap.styl"
@import "mis-variables.styl"
@import "estructura.styl"

//Fuente, tama√±o y color de texto por defecto
body
  font-size $TextoBase
  line-height $TextoBase*1.25
  color $ColorBase
  //Estilos para encabezados
  h1, h2, h3, h4, h5, h6
    margin ($baseLineHeight / 2) 0
    font-family $FuenteTitulos
    font-weight normal
    color $ColorTitulos
    text-rendering optimizelegibility
  h1
    font-size $TextoBase * 2.75
    &.small
      font-size $TextoBase * 1.75
  h2
    font-size $TextoBase * 2.25
    &.small
      font-size $TextoBase * 1.25
  h3
    font-size $TextoBase * 1.75
    &.small
      font-size $TextoBase;
  h4
    font-size $TextoBase * 1.25
    &.small
      font-size $TextoBase
  p
    color $ColorBase
    font-size $TextoBase
    font-family $FuenteBase
  a, a:visited
    color $ColorEnlaces
    &:hover
      text-decoration none

